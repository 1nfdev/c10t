ARCH=x86_64
OS=linux
VERSION=SNAPSHOT

LDFLAGS=-static -lz -lpng -lboost_thread-mt -lpthread 
DIST=c10t
TARGET=c10t

include dist/config.mk

local-package:
	tar -cvf ${PACKAGE}-${OS}-${ARCH}.tar ${PACKAGE}
