ARCH=x86_64
OS=linux
VERSION=SNAPSHOT

USR=/usr
LDFLAGS=-static -lz -lpng -lboost_thread-mt -lboost_system-mt -lboost_filesystem-mt -lpthread -lfreetype
DIST=c10t
TARGET=c10t

include dist/config.mk

local-package:
	tar -cvf ${PACKAGE}-${OS}-${ARCH}.tar ${PACKAGE}
	gzip -f ${PACKAGE}-${OS}-${ARCH}.tar
	mv ${PACKAGE}-${OS}-${ARCH}.tar.gz ${BUILD}/${PACKAGE}-${OS}-${ARCH}.tar.gz
